<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dc.galos">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.Authorization" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.Menu" android:screenOrientation="portrait"/>
        <activity android:name=".controller.Game" android:screenOrientation="portrait"/>
        <activity android:name=".controller.Registration" android:screenOrientation="portrait"/>
        <activity android:name=".controller.RestorePassword" android:screenOrientation="portrait"/>
        <activity android:name=".controller.Achievements" android:screenOrientation="portrait"/>
        <activity android:name=".controller.Help" android:screenOrientation="portrait"/>
        <activity android:name=".controller.Rating" android:screenOrientation="portrait"/>
        <activity android:name=".controller.EditAccInf" android:screenOrientation="portrait"/>

        <service
            android:enabled="true"
            android:name=".model.Sound" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>