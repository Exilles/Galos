<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45.0"
                android:startColor="#000781"
                android:endColor="#4050ff"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45.0"
                android:startColor="#0009b4"
                android:endColor="#8892ff"/>
        </shape>
    </item>
</selector>